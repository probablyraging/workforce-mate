{
    "manifest_version": 2,
    "name": "Workforce Mate",
    "version": "1.2.1",
    "description": "Fill out your job search efforts on the Workforce Australia website with ease",
    "permissions": [
        "https://www.workforceaustralia.gov.au/*",
        "https://www.seek.com.au/*",
        "https://au.jora.com/*",
        "https://au.indeed.com/*",
        "webRequest",
        "webRequestBlocking"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.workforceaustralia.gov.au/*",
                "https://www.seek.com.au/*",
                "https://au.jora.com/*",
                "https://au.indeed.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}